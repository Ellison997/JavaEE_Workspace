<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-mapping package="com.examp.ShoppingOnline">
<class name="com.examp.ShoppingOnline.AdminUser"
table="adminuser">

<!-- 实体类，实体类与表格的对应关系 -->
<!-- 
class 标记：两个属性
name属性：指定实体类的类名；
table属性：指定实体类的对应表名
 -->

<!-- 
id标记：表示主键对应的成员变量
name属性：指定实体类中的成员变量名
 -->
<id name="id" column="id">
<!-- 
generator：设置id标记内容的产生方式
 -->
<generator class="identity" />
</id>
<!-- 
property标记：两个属性
name属性：指定实体类中的成员变量，
column属性：指定成员变量对应的列名，字段名

 -->

<!-- 建立非主键对应属性的映射 -->
<property name="username" />
<property name="password" />

</class>
<!-- Category -->
<class name="com.examp.ShoppingOnline.Category"
table="category">
<id name="id">
<generator class="identity" />
</id>
<property name="name" />
</class>
<!-- Order -->
<class name="com.examp.ShoppingOnline.Order"
table="orders">
<id name="id">
<generator class="identity" />
</id>
<property name="orderno" />
<many-to-one name="user" class="User" column="userid" not-null="true"></many-to-one>
<property name="realname" />
<property name="address" />
<property name="zip" />
<property name="tel" />
<property name="payment" />
<property name="email" />
<property name="memo" />
<property name="price" />
<property name="time" />
<property name="tag" />

</class>
<!-- product -->
<class name="com.examp.ShoppingOnline.Product"
table="product">
<id name="id">
<generator class="identity" />
</id>
<!-- 多对一单向关联
建立Product表到Category 单项多对一关系
name:该标签指定Product的属性名为category
class:该标签指定的category的类型为Category
column:指定product表的外键为 sortid,该外键与Category 属性对应
 -->
<many-to-one name="category" class="Category" column="sortid" cascade="delete" not-null="true"/>
<property name="name" />
<property name="price" />
<property name="saleprice" />
<property name="descript" />
<property name="contents" />
<property name="saledate" />
<property name="salecount" />
<property name="image" />
</class>
<!-- shopcart -->
<class name="com.examp.ShoppingOnline.Shopcart"
table="shopcart">
<id name="id">
<generator class="identity" />
</id>
<property name="orderid" />
<property name="productid" />
<property name="count" />
<property name="price" />
</class>
<!-- user-->
<class name="com.examp.ShoppingOnline.User"
table="[user]">
<id name="id">
<generator class="identity" />
</id>
<property name="username" />
<property name="password" />
<property name="realname" />
<property name="tel" />
<property name="address" />
<property name="zip" />
<property name="email" />
</class>


</hibernate-mapping>